{
  "name": "modulz",
  "version": "0.5.0",
  "description": "Scalable, performant, responsive, CSS framework with zero styles.",
  "author": "Colm Tuite <colmtuite@gmail.com> (http://www.colmtuite.com)",
  "style": "css/modulz.css",
  "main": "css/modulz.min.css",
  "files": [
    "css",
    "src",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/modulz/modulz.git"
  },
  "keywords": [
    "css",
    "sass",
    "oocss",
    "performance",
    "framework",
    "front-end"
  ],
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^3.5.2",
    "normalize.css": "^4.1.1",
    "postcss": "^5.0.21",
    "postcss-custom-media": "^5.0.1",
    "autoprefixer": "^6.3.6",
    "precss": "^1.4.0",
    "yargs": "^4.7.1"
  },
  "contributors": [
    {
      "name": "Colm Tuite",
      "email": "colmtuite@gmail.com"
    }
  ],
  "scripts": {
    "start": "npm run build:css && npm run build:minify",
    "build:css": "node ./scripts/postcss src/modulz.css css/modulz.css",
    "build:minify": "node ./scripts/postcss -m src/modulz.css css/modulz.min.css",
    "build:watch": "watch 'npm start' ./src/"
  }
}
